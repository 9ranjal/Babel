      "investor_pov": "Longer window to finish diligence and docs without competitive pressure.",
      "links": ["rofo", "rofr", "tag", "drag"],
      "attributes": { "unit": "days", "value_type": "number" },
      "bands": [
        { "name": "short",  "range": [15, 30], "founder_score": 1.0, "investor_score": 0.2, "rationale": "Founder flexibility." },
        { "name": "market", "range": [30, 45], "founder_score": 0.6, "investor_score": 0.6, "rationale": "Balanced convention." },
        { "name": "long",   "range": [45, 60], "founder_score": 0.2, "investor_score": 1.0, "rationale": "Investor completeness." }
      ],
      "trades": [
        "Shorter window ↔ weekly diligence updates",
        "Shorter window ↔ confirmatory DD only"
      ],
      "regex_hints": ["exclusiv", "no[- ]shop", "no[- ]solicit", "standstill"]
    },
    {
