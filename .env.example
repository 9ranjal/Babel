# .env.example - Root directory template
# Copy this file to create your environment-specific .env files:
# - frontend/.env.local (for frontend Vite app)
# - backend/.env (for backend FastAPI app)

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (Vite Format)
# Copy these to: frontend/.env.local
# =============================================================================

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_API_BASE=http://localhost:8000
VITE_APP_NAME=Termcraft

# =============================================================================
# BACKEND ENVIRONMENT VARIABLES
# Copy these to: backend/.env
# =============================================================================

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# OpenRouter / LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=qwen2.5:14b-instruct
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_SITE_URL=http://localhost:5173
OPENROUTER_APP_NAME=Termcraft AI

# CORS Configuration
FRONTEND_ORIGIN=http://localhost:5173

